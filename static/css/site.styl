sitetitle-color = black
articletitle-color = black
navlink-color = black
inlinelink-color = rgb(103, 232, 116)

html
    font-size: 10px
    // display: flex
    // justify-content: center

:link, :visited, :active, :hover, :focus
    color: inherit
    text-decoration: none

h1, h2, h3, h4, h5, h6
    margin: 0
    font-weight: 600

#site
    width: 100%
    // margin: 7rem
    font-family: Repo
    font-weight: 300
    display: flex
    flex-flow: column nowrap
    justify-content: center

#sitehead
    order: 1
    :link, :visited, :active, :hover, :focus
        color: sitetitle-color
    h1
        margin-top: 5vw
        margin-bottom: 5vw
        font-family: Garaldus
        font-size: 7.1vw
        font-weight: 400
        text-align: center
        // a
        //     color: sitetitle-color
        //     :visited
        //         color: inherit

#sitemenu
    order: 3
    font-size: 250%
    // font-style: italic
    font-family: Fantasque Sans mono
    color: navlink-color
    ul
        display: flex
        justify-content: center
        padding: 0
        margin: 0
        li
            display: inline
            padding-left: 1rem
            &:first-child
                padding-left: 0

#sitecontent
    order: 2
// #articles

#article-list
    margin: 0
    padding: 0
    list-style-type: none
    display: flex
    flex-direction: column
    align-items: center
    li
        width: 70%
        text-align: center
        article
            position: relative
            margin-bottom: 15%
            header
                position: absolute
                width: 100%
                top: 1%
                text-align: center
                h2
                    display: inline-block
                    // font-size: 190%
                    font-size: 5vw
                    color: articletitle-color
                    background-color: white
                    line-height: 110%
                    width: 55%
                    padding: 2% 2%
                    border-radius: 2.2rem
            div.article-summary
                position: absolute
                width: 100%
                bottom: 2%
                text-align: center
                p
                    display: inline-block
                    text-align: justify
                    // font-size: 170%
                    font-size: 3vw
                    background-color: white
                    width: 50%
                    margin: 0
                    padding: 3% 5%
                    border-radius: 2.2rem
            figure.article-key-image
                z-index: -1
                position: relative
                margin: 0
                border-radius: 50%
                background-size: cover
                background-position: center
                box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.3)
                img
                    display: none
                    // position: absolute
                    // top: 0
                    // bottom: 0
                    // left: 0
                    // right: 0
                    // background-color: #4a4
                    // border-radius: 47%
                    // margin: 2%
            figure.article-key-image:before
                content: ""
                display: block
                padding-top: 100%
            footer
                position: absolute
                width: 100%
                top: 0
                margin-top: -6%
                text-align: center
                .article-published
                    display: inline-block
                    // font-size: 150%
                    font-size: 3vw
                    text-decoration: none
                    border: 0

#siteside
    order: 4
    // background-color: #666

#sitefoot
    order: 5
