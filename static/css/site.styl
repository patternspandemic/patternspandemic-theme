sitetitle-color = black
articletitle-color = black
navlink-color = black
thinlines-color = rgb(200, 200, 200)
inlinelink-color = rgb(103, 232, 116)

html
    font-size: 10px

:link, :visited, :active, :hover, :focus
    color: inherit
    text-decoration: none

h1, h2, h3, h4, h5, h6
    margin: 0
    font-weight: 600

#site
    width: 100%
    font-family: Repo
    font-weight: 300
    display: flex
    flex-flow: column nowrap
    justify-content: center

#sitehead
    order: 1
    :link, :visited, :active, :hover, :focus
        color: sitetitle-color
    h1
        margin-top: 5vw
        margin-bottom: 5vw
        font-family: Garaldus
        font-size: 7.1vw
        font-weight: 400
        text-align: center

#sitemenu
    order: 3
    font-size: 250%
    font-family: Fantasque Sans mono
    color: navlink-color
    ul
        display: flex
        justify-content: center
        padding: 0
        margin: 0
        li
            display: inline
            padding-left: 1rem
            &:first-child
                padding-left: 0

#sitecontent
    order: 2
// #articles

#article-list
    margin: 0
    padding: 0
    list-style-type: none
    display: flex
    flex-direction: column
    align-items: center
    li
        width: 70%
        text-align: center
        article
            position: relative
            margin-bottom: 15%
            header
                position: absolute
                width: 100%
                top: 1%
                text-align: center
                h2
                    display: inline-flex
                    justify-content: center
                    // font-size: 190%
                    font-size: 5vw
                    color: articletitle-color
                    line-height: 110%
                    width: 55%
                    padding: 2% 2%
                    border-radius: 2.2rem
                    a
                        display: flex
                        flex-wrap: wrap
                        justify-content: center
                        span
                            display: inline-block;
                            background-color: white
                            padding: 1% 4%
                            border-radius: 2.2rem

            div.article-summary
                position: absolute
                width: 100%
                bottom: 2%
                text-align: center
                p
                    display: inline-block
                    text-align: justify
                    // font-size: 170%
                    font-size: 3.3vw
                    font-weight: 400
                    background-color: white
                    width: 75%
                    margin: 0
                    padding: 3% 5%
                    border-radius: 2.2rem
            figure.article-key-image
                z-index: -1
                position: relative
                margin: 0
                border-radius: 50%
                background-size: cover
                background-position: center
                box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.33), 2px -2px 0px 11px white
                img
                    display: none
            figure.article-key-image:before
                content: ""
                display: block
                padding-top: 100%
            footer
                position: absolute
                width: 100%
                top: 0
                margin-top: -6%
                text-align: center
                .article-published
                    display: inline-block
                    // font-size: 150%
                    font-size: 3vw
                    text-decoration: none
                    border: 0
                    background-color: white
                    padding: 0% 2%
                    border-radius: 2.2rem
            footer.article-info:before
                z-index: -2
                position: absolute;
                content: ""
                display: block
                margin-top: 3%
                width: 100%
                padding-top: 100%
                border-radius: 50%
                border: 2px solid thinlines-color

#siteside
    order: 4

#sitefoot
    order: 5
